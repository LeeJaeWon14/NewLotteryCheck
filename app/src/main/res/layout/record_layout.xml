<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:gravity = "center">
    <Spinner
        android:id = "@+id/dateSpinner"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text = "날짜를 조회하세요."
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:background = "@drawable/block">
    </Spinner>
    <LinearLayout
        android:id = "@+id/baseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id = "@+id/refNum_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "1번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/refNum_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "2번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/refNum_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "3번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/refNum_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "4번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/refNum_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "5번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/refNum_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "6번"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft = "10dp"
        android:paddingRight="10dp"
        android:background = "@drawable/line"
        android:layout_marginBottom="30dp" />
    <LinearLayout
        android:id = "@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

    </LinearLayout>
    <TextView
        android:id = "@+id/lottoResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor = "@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/binggrae"
        android:textSize = "15dp"
        android:text = "당첨금"
        android:textAlignment="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id = "@+id/btnBackRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/block"
        android:text = "돌아가기"
        android:textStyle="bold"
        android:textColor = "@color/black"
        android:fontFamily="@font/binggrae"
        android:layout_marginTop="20dp" />
</LinearLayout>
