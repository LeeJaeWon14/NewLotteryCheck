<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity = "center"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="15dp">
        <TextView
            android:id = "@+id/test_number_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "1번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/test_number_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "2번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/test_number_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "3번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/test_number_4th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "4번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/test_number_5th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "5번"
            android:layout_marginRight="20dp"/>
        <TextView
            android:id = "@+id/test_number_6th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor = "@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/binggrae"
            android:textSize = "15dp"
            android:text = "6번"/>
    </LinearLayout>
    <LinearLayout
        android:id = "@+id/testLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:id = "@+id/layoutTestSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="15dp">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity = "center"
        android:layout_marginTop="20dp">
        <Button
            android:id = "@+id/btnCancelTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae"
            android:textColor = "@color/black"
            android:text = "나가기"
            android:background = "@drawable/block"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <Button
            android:id = "@+id/btnRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae"
            android:textColor = "@color/black"
            android:text = "추첨"
            android:background = "@drawable/block"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id = "@+id/btnTestSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae"
            android:textColor = "@color/black"
            android:text = "기록"
            android:background = "@drawable/block"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>